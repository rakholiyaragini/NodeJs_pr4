<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center">Add Transaction</h1>
        <form action="/add" method="post" class="mt-4">
            <div class="form-group">
                <label for="type">Type</label>
                <select name="type" id="type" class="form-control">
                    <option value="choose" selected disabled="disabled">Choose Type..</option>
                    <option value="Income">Income</option>
                    <option value="Expense">Expense</option>
                </select>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select name="category" id="category" class="form-control">
                    <option value="choose" selected disabled="disabled">Choose Category..</option>
                    <option value="Investment">
                        Investment
                    </option>
                    <option value="Deposits">
                        Deposits
                    </option>
                    <option value="Lottery">
                        Lottery
                    </option>
                    <option value="Salary">
                        Salary
                    </option>
                    <option value="Business">
                        Business
                    </option>
                    <option value="Savings">
                        Savings
                    </option>
                    <option value="Extra">
                        Extra
                    </option>
                    <option value="Expense">
                        Expense
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label for="amount">Amount</label>
                <input type="number" name="amount" id="amount" class="form-control" placeholder="Enter amount"
                    value="<%=transactions.amount%>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" rows="3"
                    placeholder="Enter description (optional)" value="<%=transactions.description%>"></textarea>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" name="date" id="date" class="form-control" value="<%=transactions.date%>">
            </div>
            <button type="submit" class="btn btn-dark btn-block">Add Transaction</button>
        </form>
    </div>

    <!-- table -->
    <div class="container mt-5">
        <h1 class="text-center">Transaction History</h1>
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Date</th>
                    <th scope="col">Type</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach((data,index)=>{ %>
                    <tr>
                        <td>
                            <%=index+1%>
                        </td>
                        <td>
                            <%= data.date ? data.date.toDateString() : ' No Date selected...' %>
                        </td>
                        <td>
                            <%=data.type%>
                        </td>
                        <td>
                            <%=data.category%>
                        </td>
                        <td>
                            <%=data.description%>
                        </td>
                        <td>
                            <%=data.amount%>
                        </td>

                        <td>
                            <a href="edit/<%= data._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="delete/<%= data._id %>" class="btn btn-danger btn-sm">Delete</a>

                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>